{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "CV Build",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.o",
        "`pkg-config --cflags --libs opencv`"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "Task generated by Debugger."
    },
    {
      "label": "Run CV C++",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}.o",
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "dependsOn": ["CV Build"],
      "problemMatcher": []
    }
  ],
  "version": "2.0.0"
}
